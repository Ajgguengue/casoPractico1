<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/milayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/EdtText1"
        android:layout_width="112dp"
        android:layout_height="26dp"
        android:text="Hola TextView!"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/EdtText2"
        android:layout_width="239dp"
        android:layout_height="21dp"
        android:gravity="center_horizontal"
        android:text="Hola TextView Color + Centrado"
        android:textColor="#335188"
        app:layout_constraintTop_toBottomOf="@+id/EdtText1"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/EdtText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hola TextView 20sp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/EdtText2"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/EdtText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hola TextView Cursiva Sans"
        android:textStyle="bold|italic"
        android:typeface="sans"
        app:layout_constraintTop_toBottomOf="@+id/EdtText3"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/EdtText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hola TextView MayÃºsculas Sans"
        android:textAllCaps="true"
        android:typeface="sans"
        app:layout_constraintTop_toBottomOf="@+id/EdtText4"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/EdtText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hola TextView S/C Headline3 "
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        android:textStyle="italic"
        android:typeface="sans"
        app:layout_constraintTop_toBottomOf="@+id/EdtText5"
        tools:layout_editor_absoluteX="0dp" />

</LinearLayout>